.navbar.navbar-fixed-top
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".nav-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      //%a.brand{:href => "#"} Some Store
      .nav-collapse
        %ul.nav
          %li= link_to "Home", root_path
          %li= link_to "Online users", online_users_path
        %ul.nav.pull-right
          - if user_signed_in?
            %li
              = link_to "#{current_user.username.blank? ? current_user.nickname : current_user.username}", edit_user_registration_path
            %li
              = link_to('Logout ', destroy_user_session_path, :method => :delete)
          - else
            %li
              = link_to('Login', new_user_session_path)
            %li
              = link_to image_tag("/assets/facebook.png"), user_omniauth_authorize_path(:facebook), alt: "Sign in with Facebook"
            %li
              = link_to image_tag("/assets/twitter.png"), user_omniauth_authorize_path(:twitter), alt: "Sign in with Twitter"
            %li
              = link_to image_tag("/assets/vkontakte.png"), user_omniauth_authorize_path(:vkontakte), alt: "Sign in with Vk"
            %li
              = link_to('Register', new_user_registration_path)

